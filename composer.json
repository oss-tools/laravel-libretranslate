{
  "name": "oss-tools/laravel-libretranslate",
  "description": "Package to introduce a Client for translating text using LibreTranslate in Laravel.",
  "keywords": [
    "oss-tools",
    "laravel-libretranslate"
  ],
  "homepage": "https://github.com/oss-tools/laravel-libretraslate",
  "license": "MIT",
  "require": {
    "php": "^8.0.2",
    "illuminate/database": "^9.0 || ^10.0",
    "illuminate/support": "^9.0 || ^10.0",
    "nesbot/carbon": "^2.0",
    "guzzlehttp/guzzle": "^7.2",
    "ext-json": "*"
  },
  "require-dev": {
    "orchestra/testbench": "^7.0 || ^8.0",
    "phpunit/phpunit": "^9.5.10 || ^10.1"
  },
  "autoload": {
    "psr-4": {
      "OSSTools\\LibreTranslate\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OSSTools\\LibreTranslate\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "OSSTools\\LibreTranslate\\LibreTranslateServiceProvider"
      ]
    }
  }
}
