{
  "name": "oss-tools/laravel-libretranslate",
  "description": "Package to introduce a Client for translating text using LibreTranslate in Laravel.",
  "keywords": [
    "oss-tools",
    "laravel-libretranslate"
  ],
  "homepage": "https://github.com/oss-tools/laravel-libretraslate",
  "license": "MIT",
  "require": {
    "php": "^7.1.3|^8.0",
    "illuminate/database": "^5.8 || ^6.0 || ^7.0 || ^8.0",
    "illuminate/support": "^5.8 || ^6.0 || ^7.0 || ^8.0",
    "nesbot/carbon": "^2.0",
    "guzzlehttp/guzzle": "^7.0",
    "ext-json": "*"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0",
    "phpunit/phpunit": "^7.5 || ^8.4 || ^9.0"
  },
  "autoload": {
    "psr-4": {
      "OSSTools\\LibreTranslate\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OSSTools\\LibreTranslate\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "LibreTranslateServiceProvider"
      ],
      "aliases": {
        "Package": "OSSTools\\LibreTranslate\\PackageFacade"
      }
    }
  }
}
